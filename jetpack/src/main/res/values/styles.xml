    <style name="AppTheme" parent="ThemeNoTitle" />

    <style name="word_title">
        <!-- margin -->
        <item name="android:layout_marginBottom">8dp</item>
        <!-- padding -->
        <item name="android:paddingLeft">8dp</item>
        <!-- background -->
        <item name="android:background">@android:color/holo_orange_light</item>
        <!-- text -->
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="ThemeNoTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/chrome_orange_54</item>
        <item name="colorPrimaryDark">@color/chrome_orange_20</item>
        <!-- content overlay -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlNormal">@color/chrome_orange_74</item>
        <item name="colorAccent">@color/chrome_orange_90</item>
    </style>

    <style name="ThemeImmersive" parent="ThemeNoTitle">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Compose" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Lavender4</item>
        <item name="colorPrimaryVariant">@color/Lavender5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Ocean6</item>
        <item name="colorSecondaryVariant">@color/Ocean8</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Compose.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Compose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Compose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>